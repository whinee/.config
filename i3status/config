general {
    colors = true
    interval = 1
}

order += "volume master"
order += "tztime serial"
order += "tztime gf"
order += "tztime utc"
order += "battery all"
order += "ethernet _first_"
order += "disk /"
order += "cpu_usage"
order += "load"
order += "memory"
order += "time"

volume master {
    format = "â™ª: %volume"
    format_muted = "â™ª: %volume (m)"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

tztime serial {
    format = "8: %Y/%m/%d â€• %H:%M"
}

tztime gf {
	format = "gf: %Y/%m/%d â€• %H:%M"
	timezone = "Europe/Zurich"
}

tztime utc {
    format = "0: %Y/%m/%d â€• %H:%M"
    timezone = "GMT+0"
}

battery all {
    format = "ðŸ”‹: %percentage â€• %status"
    format_down = "B: N/A"
    status_chr = "âš¡ CHR"
    status_unk = "? UNK"
    status_full = "FULL"
}

ethernet _first_ {
    format_up = "%ip (%speed)"
    format_down = "E: down"
}

disk "/" {
    format = "%avail/%total (%percentage_used)"
}

cpu_usage {
    format = "C: %usage"
}

