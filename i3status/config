    format = "L: %1min"
    max_threshold = 10
}

memory {
    format = "%used (%percentage_used)"
    unit = "Ti"
    threshold_degraded = "20%"
    threshold_critical = "10%"
    format_degraded = "%used (%percentage_used)"
}

